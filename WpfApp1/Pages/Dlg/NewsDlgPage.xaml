      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.Dlg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
