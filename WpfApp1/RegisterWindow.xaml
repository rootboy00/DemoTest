<Window x:Class="WpfApp1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="200" Width="300">
    <Grid >

        <StackPanel >

            <Label Content="Авторизация" FontSize="18" HorizontalAlignment="Center"/>

            <Label Content="Логин"/>
            <TextBox />
            <Label Content="Пароль"/>
            <TextBox />

            <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Right" >
                <Button Content="Ок" Width="75" Margin="5,5"  
                        Click="Button_Click"/>
                <Button Content="Регистрация" Width="75" Margin="5,5" 
                        Click="Button_Click"/>
            </StackPanel>

        </StackPanel>
        
    </Grid>
</Window>
